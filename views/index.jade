doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(http-equiv="x-ua-compatible", content="ie=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title PageCloud Statrix 
    script(src='/webpack/libs.js')
    link(href='/style/style.css', rel='stylesheet' )
    block head_append
      script(src='/webpack/index.js')
  body
    .container
      .row#top
        .col-xs-12
          section#titlescreen
            // video#pink( )
              // source(src="/static/pink.mp4" type="video/mp4")
            img(src="/static/wordmark.png")
            h1 Statrix

      .row
        nav.navbar.navbar-default.navbar-fixed-top.hidden
          .container-fluid
            #navbar-collapse
              a.navbar-brand(href="#").
                Statrix
              ul.nav.navbar-nav
                li: a(href="#unique") Unique Users
                li: a(href="#referrers") Top Referrers
                li: a(href="#bots") Bots v. Users 
                li: a(href="#pages") Most Popular Pages
                li: a(href="#geo") Geoplot



      .row#main
        .col-xs-12
          block main
            section#unique
            section#referrers
            section#bots
            section#pages.row
              .dummy.col-md-2
            .clearfix
            section#geo
            .clearfix

      .row#footer
        .col-xs-12.copy.text-center

          block footer_append
    script(src='http://0.0.0.0:35729/livereload.js')
